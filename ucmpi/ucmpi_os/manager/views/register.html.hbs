                <div class="row h-100">
                    <div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
                        <div class="d-table-cell align-middle">

                            <div class="text-center mt-4">
                                <h1 class="h2">Register</h1>
                            </div>

                            <div class="card">
                                <div class="card-body">
                                    <div class="m-sm-4">
                                        <div class="text-center">
                                            <img src="../static/img/logo_no_bg.png" alt="alphaWerk" class="img-fluid rounded-circle" width="132" height="132">
                                        </div>
                                        <form action="/register" method="post">
                                            <div class="card">
                                                <h5 class="card-header">Create Admin User</h5>
                                                <div class="card-body">
                                                    <div class="form-group">
                                                        <label>Username</label>
                                                        <input class="form-control form-control-lg" type="text" name="username"
                                                               placeholder="Enter your Username"/>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Email</label>
                                                        <input class="form-control form-control-lg" type="text" name="useremail"
                                                               placeholder="Enter your email address"/>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Password</label>
                                                        <input class="form-control form-control-lg" type="password"
                                                               name="password" placeholder="Enter password"/>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Confirm Password</label>
                                                        <input class="form-control form-control-lg" type="password"
                                                               name="passwordcomp" placeholder="Enter password again"/>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="card">
                                                <h5 class="card-header">Cloud Access</h5>
                                                <div class="card-body">
                                                    <div>
                                                        <div id="cloudmsg"></div>
                                                        <div class="form-group">
                                                            <label>Name</label>
                                                            <input class="form-control form-control-lg" type="text"
                                                                   id="friendlyname" name="friendlyname"
                                                                   placeholder="Enter your Friendly Name for Remote Access"/>
                                                        </div>
                                                        <div id="serial">Serial Number: Error</div>
                                                        <div id="UUID">UUID: Error</div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="card">
                                                <h5 class="card-header">Beta License</h5>
                                                <div class="card-body">
                                                    <iframe src="../static/license.html" width="100%" height="100%"
                                                            frameborder=0></iframe>
                                                    <input type="checkbox" name="betachk"> Accept License terms of the Beta Test<br>
                                                </div>
                                            </div>

                                            <div class="text-center mt-3">
                                                <div id="message"></div>
                                                <input class="btn btn-lg btn-primary" type="submit" value="Sign Up"/>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </main>
    {{/content}}

    {{#content "foot" mode="append"}}
    {{/content}}
