{{#extend "base_layout.html"}}
    {{#content "head" mode="append"}}
        <script>
            function parse_query_string(query) {
                var vars = query.split("&");
                var query_string = {};
                for (var i = 0; i < vars.length; i++) {
                    var pair = vars[i].split("=");
                    var key = decodeURIComponent(pair[0]);
                    var value = decodeURIComponent(pair[1]);
                    // If first entry with this name
                    if (typeof query_string[key] === "undefined") {
                        query_string[key] = decodeURIComponent(value);
                        // If second entry with this name
                    } else if (typeof query_string[key] === "string") {
                        var arr = [query_string[key], decodeURIComponent(value)];
                        query_string[key] = arr;
                        // If third or later entry with this name
                    } else {
                        query_string[key].push(decodeURIComponent(value));
                    }
                }
                return query_string;
            }

            $(document).ready(function () {
                var query = window.location.search.substring(1);
                var qs = parse_query_string(query);
                console.log(query + ":" + JSON.stringify(qs));
                if (qs.reg) {
                    switch (qs.reg) {
                        case '1':
                            $("#friendlyname").attr("value", qs.serialnum);
                            $("#friendlyname").removeAttr("disabled");
                            $("#cloudmsg").html("Device not registered, enter friendly name below<br><br>");
                            break;
                        case '2':
                            $("#friendlyname").attr("value", qs.friendlyname);
                            $("#cloudmsg").html("Device already registered and verified<br><br>");
                            break;
                        case '3':
                            $("#friendlyname").attr("value", qs.serialnum);
                            $("#cloudmsg").html("Device already registered but unable to verify, friendly name not available<br><br>");
                            break;
                        case '4':
                            $("#friendlyname").attr("value", qs.serialnum);
                            $("#cloudmsg").html("Unable to contact cloud server, friendly name not available<br><br>");
                            break;
                        default:
                    }
                }

                if (qs.serialnum) {
                    $("#serial").html("Serial Number: " + qs.serialnum);
                }

                if (qs.UUID) {
                    $("#UUID").html("UUID: " + qs.UUID);
                }

                if (qs.msg) {
                    //var message = "Unknown response from server";
                    switch (qs.msg) {
                        case '0':
                            message = "<strong>Username / Password / Email not valid</strong>";
                            break;
                        case '1':
                            message = "<strong>You must accept the License terms to continue</strong>";
                            break;
                        case '2':
                            message = "<strong>Password and confirm password don't match</strong>";
                            break;
                        case '3':
                            message = "<strong>Friendly name invalid, already in use or error on server<strong>";
                            break;

                        default:
                    }
                    document.getElementById("message").innerHTML = message;
                }

            });


        </script>
    {{/content}}

    {{#content "meta" mode="replace"}}
        <title>UCM PI - Register</title>
        <meta name="description" content="UCM PI - Register">
    {{/content}}

    {{#content "body"}}
