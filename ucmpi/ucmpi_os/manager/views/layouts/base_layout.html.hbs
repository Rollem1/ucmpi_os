<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/html">
    <head>
        {{#block "head"}}
            <meta charset="utf-8">
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
            <meta name="author" content="alphaWerk">
            {{#block "meta"}}
                <title>UCM PI</title>
                <meta name="description" content="UCM PI">
            {{/block}}
            <script src="../../static/js/jquery-2.1.1.min.js"></script>
            <script src="../../static/js/include.js"></script>
            <link href="../../static/css/app.css" rel="stylesheet">
            <link href="../../static/css/fontawesome.min.css" rel="stylesheet">
        {{/block}}
    </head>

    <body>
    {{#block "body"}}
        <div class="wrapper">
            <div class="d-flex">
                <nav class="sidebar">
                    <div class="sidebar-content"><a class="sidebar-brand" href="/pi"> <img
                            src="../../static/img/logo_no_bg.png" height="25px"> <span class="align-middle">alphaWerk</span> </a>
                        <ul class="sidebar-nav">
                            <li class="sidebar-header"> Main</li>
                            <li class="sidebar-item">
                                <a href="#dashboards" data-toggle="collapse" class="sidebar-link collapsed">
                                    <i class="align-middle" data-feather="layout"></i>
                                    <span class="align-middle">Dashboards</span>
                                </a>
                                <ul id="dashboards" class="sidebar-dropdown list-unstyled collapse">
                                    <li id="node-red-dash" class="sidebar-item"></li>
                                </ul>
                            </li>
                            <li id="node-red" class="sidebar-item"></li>
                            <li class="sidebar-item {{#if adminSidebar }}active{{/if}}">
                                <a href="#admin" data-toggle="collapse" class="sidebar-link {{#if adminSidebar }}{{else}}collapsed{{/if}}">
                                    <i class="align-middle" data-feather="settings"></i> <span class="align-middle">Admin</span>
                                </a>
                                <ul id="admin" class="sidebar-dropdown list-unstyled collapse {{#if adminSidebar }}show{{else}}collapse{{/if}}">
                                    <li class="sidebar-item {{#if piLink }}active{{/if}}">
                                        <a class="sidebar-link" href="/pi">Pi</a>
                                    </li>
                                    {{#if admin }}
                                        <li class="sidebar-item {{#if comfortLink }}active{{/if}}">
                                            <a class="sidebar-link" href="/comfort">Comfort</a>
                                        </li>
                                        <li class="sidebar-item {{#if usersLink }}active{{/if}}">
                                            <a class="sidebar-link" href="/users">Users</a>
                                        </li>
                                        <li class="sidebar-item {{#if cloudLink }}active{{/if}}">
                                            <a class="sidebar-link" href="/cloud">Cloud Services</a>
                                        </li>
                                    {{/if}}
                                </ul>
                            </li>
                            {{#if admin }}
                                <li class="sidebar-item {{#if diagSidebar }}active{{/if}}">
                                    <a href="#diagnostics" data-toggle="collapse" class="sidebar-link {{#if diagSidebar }}{{else}}collapsed{{/if}}">
                                        <i class="align-middle" data-feather="activity"></i>
                                        <span class="align-middle">Diagnostics</span>
                                    </a>
                                    <ul id="diagnostics" class="sidebar-dropdown list-unstyled {{#if diagSidebar }}show{{else}}collapse{{/if}}">
                                        <li class="sidebar-item {{#if traceLink }}active{{/if}}">
                                            <a class="sidebar-link" href="/trace">Trace</a>
                                        </li>
                                    </ul>
                                </li>
                            {{/if}}
                            <li class="sidebar-item">
                                <a href="#resources" data-toggle="collapse" class="sidebar-link collapsed">
                                    <i class="align-middle" data-feather="book-open"></i>
                                    <span class="align-middle">Resources</span>
                                </a>
                                <ul id="resources" class="sidebar-dropdown list-unstyled collapse">
                                    <li class="sidebar-item">
                                        <a class="sidebar-link" href="https://nodered.org/" target="_blank">Node-Red</a>
                                    </li>
                                    <li class="sidebar-item">
                                        <a class="sidebar-link" href="http://www.comfortforums.com/" target="_blank">Comfort Forum</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                        <div class="sidebar-bottom d-none d-lg-block">
                            <div class="media">
                                <div class="media-body"><h5 class="mb-1 text-white">{{ username }}</h5>
                                    <div class="text-light"><i class="fas fa-circle text-success"></i> Online</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </nav>

                <div class="main">
                    <nav class="navbar navbar-expand navbar-light bg-white">
                        <a class="sidebar-toggle d-flex mr-2">
                            <i class="hamburger align-self-center"></i>
                        </a>

                        <div class="navbar-collapse collapse">
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="userDropdown" data-toggle="dropdown">
                                        <span class="d-inline-block d-md-none">
                                            <i class="align-middle" data-feather="settings"></i>
                                        </span>
                                        <span class="d-none d-sm-inline-block">
                                            <span class="text-dark ">{{ username }}</span>
                                        </span>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                                        <a class="dropdown-item" href="/logout">Sign out</a>
                                        <a class="dropdown-item" href="/password">Change Password</a>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </nav>

                    <main class="content">
                        <div class="container-fluid p-0">
                            {{#block "content"}}
                            {{/block}}
                        </div>
                    </main>

                    <footer class="footer">
                        <div class="container-fluid">
                            <div class="row text-muted">
                                <div class="col-6 text-left">
                                    <ul class="list-inline">
        <!--                                <li class="list-inline-item">
                                            <a class="text-muted" href="#">Support</a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a class="text-muted" href="#">Help Center</a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a class="text-muted" href="#">Privacy</a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a class="text-muted" href="#">Terms of Service</a>
                                        </li>-->
                                    </ul>
                                </div>
                                <div class="col-6 text-left">
                                    <p class="mb-0" style="position: fixed; margin-right: 10px; margin-bottom: 10px; right: 30px;">
                                        Â© 2018 - <a href="/pi" class="text-muted">alphaWerk</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <iframe width="0" height="0" border="0" name="dummyframe" id="dummyframe"></iframe>
                    </footer>

                </div>
            </div>
        </div>
    {{/block}}

    {{#block "foot"}}
        <script>
            includeHTML();
        </script>
        <script src="../../static/js/app.js"></script>
        <script>
            $('body').tooltip({
                selector: '[data-toggle="tooltip"]'
            });
        </script>
    {{/block}}
    </body>
</html>
